<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="event_org_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event.org</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Event!
            </p>
        </field>
    </record>

    <!--tree view -->
    <record id="event_org_view_tree" model="ir.ui.view">
        <field name="name">event.org.view.tree</field>
        <field name="model">event.org</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="custmer" />
                <field name="cu_m_email" />
                <field name="cu_m_no" />
            </tree>
        </field>
    </record>

    <!--form -->
    <record id="event_org_view_form" model="ir.ui.view">
        <field name="name">event.org.view.form</field>
        <field name="model">event.org</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state in ['CO','C']"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['CO','C']"/>
                    <field name="state" widget="statusbar" statusbar_visible="CO,C,N" />
                    <field name="state" widget="statusbar" statusbar_visible="Co,C" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                        <group>
                            <field name="custmer" />
                            <field name="cu_m_no" />
                            <field name="cu_m_email" />
                        </group>
                        <group>
                            <field name="event_type_id" />
                        </group>
                        <group>
                            <field name="other_venue" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="budget" />
                                    <field name="attendees" />
                                    <field name="active" />
                                    <field name="total_days" readonly='1' />
                                </group>
                            </page>
                            <page string="Services">
                                <field name='service_ids' />
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <menuitem id="menu_event_root" name="Events"/>
    <menuitem id="menu_event_org" name="All Events" parent="menu_event_root" action="event_org_action"/>
    <menuitem id="menu_production" name="Production" parent="menu_event_root" />
    <menuitem id="menu_event_type" name="Event Type" parent="menu_event_root" action="event_type_action" />
    <menuitem id="menu_event_venue" name="Event venue" parent="menu_event_root" action="event_venue_action"></menuitem>
    <menuitem id="menu_services" name="Services" parent="menu_event_root" action="event_services_action"></menuitem>
</odoo>