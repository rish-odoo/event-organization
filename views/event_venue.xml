<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_venue_action" model="ir.actions.act_window">
        <field name="name">Event Venue</field>
        <field name="res_model">event.venue</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Property, the first step of a new property!
            </p>
        </field>
    </record>

    <record id="event_venue_view_form" model="ir.ui.view">
        <field name="name">event.venue.view.tree</field>
        <field name="model">event.venue</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="garden" />
                            <field name="hall" />
                        </group>
                        <group>
                            <field name="hotel" />
                            <field name="restaurants" />
                            <field name="cafe" />
                        </group>
                    </group>
                    <notebook>
                        <page string="venue Information">
                            <group>
                                <field name="ven_charg_for_garden"
                                    invisible="garden == 'False'" />
                                <field name="rooms"
                                    invisible="garden == 'False'" />
                                <field name="hall_capisity"
                                    invisible="garden == 'False'" />
                                <field name="capisity"
                                    invisible="garden == 'False'" />
                                <field name="location"
                                    invisible="garden == 'False'" />
                            </group>
                            <group>
                                <field name="ven_charg_for_hall"
                                    invisible="hall == 'False'" />
                                <field name="hall_capisity"
                                    invisible="hall == 'False'" />
                                <field name="location"
                                    invisible="hall == 'False'" />
                            </group>
                            <group>
                                <field name="ven_charg_for_hotel"
                                    invisible="hotel == 'False'" />
                                <field name="rooms"
                                    invisible="hotel == 'False'" />
                                <field name="hall_capisity"
                                    invisible="hotel == 'False'" />
                                <field name="capisity"
                                    invisible="hotel == 'False'" />
                                <field name="location"
                                    invisible="hotel == 'False'" />
                            </group>
                            <group>
                                <field name="ven_charg_for_res"
                                    invisible="restaurants == 'False'" />
                                <field name="rooms"
                                    invisible="restaurants == 'False'" />
                                <field name="hall_capisity"
                                    invisible="restaurants == 'False'" />
                                <field name="capisity"
                                    invisible="restaurants == 'False'" />
                                <field name="location"
                                    invisible="restaurants == 'False'" />
                            </group>
                            <group>
                                <field name="ven_charg_for_cafe"
                                    invisible="cafe == 'False'" />
                                <field name="capisity"
                                    invisible="cafe == 'False'" />
                                <field name="location"
                                    invisible="cafe == 'False'" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>