<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_my_event_custmer" model="ir.module.category">
        <field name="name">My Event</field>
        <field name="description">Group access</field>
        <field name="sequence">9</field>
    </record>

    <record id="event_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_my_event_custmer"/>
    </record>

    <record id="event_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_my_event_custmer"/>
        <field name="implied_ids" eval="[(4,ref('event_group_user'))]"/>
    </record>

    <record id="rule_id_user" model="ir.rule">
        <field name="name">Rules for Agent/user</field>
        <field name="model_id" ref="model_event_org"/>
        <field name="groups" eval="[(4,ref('event_group_user'))]"/>
    </record>

    <record id="rule_id_manager" model="ir.rule">
        <field name="name">Rules for Manager</field>
        <field name="model_id" ref="model_event_org"/>
        <field name="groups" eval="[(4,ref('event_group_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

</odoo>
